<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_18"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dimen_10"
            android:lines="1"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="这道题请机智的小伙伴回答"
            android:textStyle="bold"
            android:textColor="@color/colorLineGray"
            android:textSize="@dimen/size_16"/>


        <TextView
            android:id="@+id/tv_time"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_18"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="30分钟前"
            android:textColor="@color/colorBindGray"
            android:textSize="@dimen/size_14"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_question_title"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_marginRight="@dimen/dimen_18"
            android:layout_marginTop="@dimen/dimen_10"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="1对方回答是否会克里斯蒂发呆时间可浪费 房的索科洛夫就哭了收到回复立刻决定尽快立法啊时间考虑和风口浪尖上的符合健康阿的时刻阿布贾哦速度还是反对索科洛夫你快乐就快乐"
            android:textColor="@color/colorLineGray"
            android:textSize="@dimen/dimen_15"/>


        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150"
            android:layout_below="@id/tv_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_8"
            android:src="@mipmap/wulidashi"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="0个赞"
            android:textColor="@color/colorBindGray"
            android:textSize="@dimen/size_14"/>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_content"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_toRightOf="@id/tv_praise"
            android:text="45条评论"
            android:textColor="@color/colorBindGray"
            android:textSize="@dimen/size_14"/>


        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_content"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_toRightOf="@id/tv_comment"
            android:text="删除"
            android:visibility="gone"
            android:textColor="@color/colorTitleBlue"
            android:textSize="@dimen/size_14"/>

    </RelativeLayout>
</RelativeLayout>