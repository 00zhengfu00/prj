<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_root"
        android:layout_weight="1">
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-10dp"
        android:background="@drawable/divider_main"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingTop="15dp">

        <RadioButton
            android:id="@+id/rb_nx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/nx_bg_selected"
            android:gravity="center"
            android:text="侬享分"
            android:textColor="@color/gray"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/rb_ph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ph_bg_selected"
            android:gravity="center"
            android:text="享普惠"
            android:textColor="@color/gray"
            android:textSize="10sp"
            />

        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/mine_bg_selected"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/gray"
            android:textSize="10sp"/>
    </RadioGroup>

</RelativeLayout>