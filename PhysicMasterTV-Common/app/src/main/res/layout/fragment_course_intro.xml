<reco.frame.tv.view.TvRelativeLayoutAsGroup xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            tools:context=".fragment.CourseIntroFragment">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        >

        <FrameLayout
            android:id="@+id/fm_course"
            android:layout_width="@dimen/x552"
            android:layout_height="@dimen/y300"
            android:layout_marginLeft="@dimen/x276"
            >

            <ImageView
                android:id="@+id/iv_course"
                android:layout_width="@dimen/x552"
                android:layout_height="@dimen/y300"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/x36"
                >
            </TextView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x110"
            android:layout_toRightOf="@id/fm_course"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_original_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textSize="@dimen/x36"
                android:textStyle="italic"
                android:textColor="@color/text_unselect_color"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_price_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="促销价："
                    android:textColor="@color/white"
                    android:textSize="@dimen/x36"
                    />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/money_color"
                    android:textSize="@dimen/x36"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_buy"
                android:layout_width="@dimen/x354"
                android:layout_height="@dimen/y112"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/x40"
                android:layout_marginTop="@dimen/y34"
                android:layout_toLeftOf="@id/tv_time"
                android:background="@drawable/selector_common_btn_bg"
                android:focusable="true"
                android:nextFocusDown="@+id/tth_container"
                >

                <TextView
                    android:id="@+id/tv_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y60"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/selector_btn_buy"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="@color/text_color_bg"
                    android:textSize="@dimen/x42"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/x1000"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative"
        android:layout_marginBottom="@dimen/y100"
        android:layout_marginLeft="@dimen/x276"
        android:layout_marginTop="@dimen/y100"
        android:lineSpacingExtra="@dimen/y20"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/x36"
        />

</reco.frame.tv.view.TvRelativeLayoutAsGroup>
