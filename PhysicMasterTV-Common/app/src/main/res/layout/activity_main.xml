<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tv="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.lswuyou.tv.pm.view.DigitalClock
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y60"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size"
        />

    <reco.frame.tv.view.TvRelativeLayout
        android:id="@+id/lay_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/x114"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/selector_search"
        android:focusable="true"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        >

        <FrameLayout
            android:id="@+id/lay_head"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/iv_default_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/default_head"
                />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_weixin_head"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:riv_corner_radius="@dimen/x60"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="@dimen/x150"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/lay_head"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="用户登录"
            android:textColor="@color/text_unselect_color"
            android:textSize="@dimen/common_text_size"
            />
    </reco.frame.tv.view.TvRelativeLayout>

    <reco.frame.tv.view.TvRelativeLayout
        android:id="@+id/lay_search"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x70"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y40"
        android:layout_toLeftOf="@id/tv_time"
        android:background="@drawable/selector_search"
        android:nextFocusDown="@+id/tth_container"
        >

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y60"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:drawableLeft="@mipmap/search_unselect"
            android:drawablePadding="@dimen/x10"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/text_unselect_color"
            android:textSize="@dimen/x26"
            />
    </reco.frame.tv.view.TvRelativeLayout>

    <reco.frame.tv.view.TvTabHost
        android:id="@+id/tth_container"
        android:layout_width="@dimen/x1920"
        android:layout_height="@dimen/y900"
        android:layout_below="@id/lay_search"
        android:layout_marginTop="@dimen/y150"
        tv:cursorHeight="@dimen/y50"
        tv:cursorMarginTop="@dimen/y60"
        tv:cursorRes="@drawable/cursor_index"
        tv:cursorWidth="@dimen/x250"
        tv:dividerHeight="@dimen/y10"
        tv:durationScroll="400"
        tv:scale="1.4"
        tv:textColorDefault="@color/text_unselect_color"
        tv:textColorSelected="@color/white"
        tv:textSize="@dimen/common_text_size"
        tv:titleHeight="@dimen/y70"
        tv:titleSpace="@dimen/x55"
        tv:titleWidth="@dimen/x250"
        />
</RelativeLayout>