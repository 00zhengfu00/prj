<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_item_style_border_light_divider"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="6.0dip"
              android:paddingTop="5.0dip" >

    <FrameLayout
        android:id="@+id/img_view_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/pic_url_view"
            android:layout_width="110.0dip"
            android:layout_height="110.0dip"
            android:padding="15.0dip" />

        <ImageView
            android:id="@+id/zone_10_tag"
            android:layout_width="26.0dip"
            android:layout_height="26.0dip"
            android:layout_marginLeft="8.0dip"
            android:src="@mipmap/zone_10"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="6.0dip"
        android:paddingRight="10.0dip" >

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/light_black"
            android:textSize="13.099976dip" />

        <LinearLayout
            android:id="@+id/winner_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3.0dip"
            android:layout_marginTop="3.0dip"
            android:background="#0e6b6b6b"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10.0dip"
            android:paddingTop="6.0dip"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="6.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:text="期数："
                        android:textColor="@color/text_default_color"
                        android:textSize="11.0dip" />

                    <TextView
                        android:id="@+id/tv_nper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_default_color"
                        android:textSize="11.0dip" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:text="获得者："
                        android:textColor="@color/text_default_color"
                        android:textSize="11.0dip" />

                    <TextView
                        android:id="@+id/nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0d82db"
                        android:textSize="11.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:text="本次参与："
                        android:textColor="@color/text_default_color"
                        android:textSize="11.0dip" />

                    <TextView
                        android:id="@+id/parCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_default_color"
                        android:textSize="11.0dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人次"
                        android:textColor="@color/text_default_color"
                        android:textSize="11.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:text="幸运号码："
                        android:textColor="@color/text_default_color"
                        android:textSize="11.0dip" />

                    <TextView
                        android:id="@+id/code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/pink"
                        android:textStyle="bold"
                        android:textSize="11.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:text="揭晓时间："
                        android:textColor="@color/text_default_color"
                        android:textSize="11.0dip" />

                    <TextView
                        android:id="@+id/complete_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_default_color"
                        android:textSize="11.0dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>