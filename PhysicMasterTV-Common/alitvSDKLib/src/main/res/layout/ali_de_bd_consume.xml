<?xml version="1.0" encoding="utf-8"?>
<com.de.aligame.core.ui.view.BdPayCommonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ali_de_bd_consume"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true" >

    <LinearLayout
        android:id="@+id/ali_de_bd_consume_account_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ali_de_bd_bg_payment_stock"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ali_de_bd_consume_info_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ali_de_bd_margin_40"
            android:gravity="center"
            android:orientation="vertical" >

           <LinearLayout
                android:id="@+id/ali_de_bd_consume_info_ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/ali_de_bd_margin_68"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ali_de_bd_result_success_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ali_de_bd_result_success"
                    android:visibility="gone"/>

               <TextView
                android:id="@+id/ali_de_bd_consume_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/ali_de_bd_pay_title_text_color"
                android:textSize="@dimen/ali_de_bd_text_size_32" />
            </LinearLayout>
         

            <TextView
                android:id="@+id/ali_de_bd_consume_account_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="@dimen/ali_de_bd_margin_10"
                android:gravity="center_horizontal"
                android:text="M币余额 5元"
                android:textColor="@color/ali_de_bd_pay_btn_txt_color_normal"
                android:textSize="@dimen/ali_de_bd_text_size_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ali_de_bd_consume_result_award_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ali_de_bd_margin_20"
            android:layout_marginBottom="@dimen/ali_de_bd_margin_32"
            android:gravity="center"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#1e000000" />

            <LinearLayout
                android:id="@+id/ali_de_bd_consume_result_award_ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ali_de_bd_margin_32"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ali_de_bd_result_gift_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ali_de_bd_result_gift"
                    />

                <TextView
                    android:id="@+id/ali_de_bd_consume_result_award_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                    android:textColor="@color/ali_de_bd_pay_title_text_color"
                    android:textSize="@dimen/ali_de_bd_text_size_32" />
            </LinearLayout>

            <TextView
                android:id="@+id/ali_de_bd_consume_result_award_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="@dimen/ali_de_bd_margin_10"
                android:gravity="center_horizontal"
                android:textColor="@color/ali_de_bd_pay_btn_txt_color_normal"
                android:textSize="@dimen/ali_de_bd_text_size_20"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ali_de_bd_consume_result_user_address_ll"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:gravity="center"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#1e000000" />

            <RelativeLayout
                android:id="@+id/ali_de_bd_consume_result_user_address"
                android:layout_width="wrap_content"
                android:layout_height="156dp" >

                <LinearLayout
                    android:id="@+id/ali_de_bd_consume_result_user_address_text_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/ali_de_bd_consume_result_user_address_text_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ali_de_bd_margin_16"
                        android:textColor="@color/ali_de_bd_text_address_color"
                        android:textSize="@dimen/ali_de_bd_text_size_24" />

                    <TextView
                        android:id="@+id/ali_de_bd_consume_result_user_address_text_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ali_de_bd_margin_4"
                        android:textColor="@color/ali_de_bd_text_address_color"
                        android:textSize="@dimen/ali_de_bd_text_size_20" />

                    <TextView
                        android:id="@+id/ali_de_bd_consume_result_user_address_text_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ali_de_bd_margin_16"
                        android:textColor="@color/ali_de_bd_text_address_city_color"
                        android:textSize="@dimen/ali_de_bd_text_size_16" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ali_de_bd_consume_result_user_address_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ali_de_bd_btn_reward_switch"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ali_de_bd_consume_result_user_address_blur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ali_de_bd_btn_reward_blur" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/whole_dialog_button_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <include
                android:id="@+id/ali_de_bd_baodian_consume_1"    
                 android:layout_width="@dimen/ali_de_bd_text_btn_width"
                android:layout_height="@dimen/ali_de_bd_text_btn_height"         
                layout="@layout/ali_de_bd_consume_btn" />

            <include
                android:id="@+id/ali_de_bd_baodian_consume_2"
                 android:layout_width="@dimen/ali_de_bd_text_btn_width"
                android:layout_height="@dimen/ali_de_bd_text_btn_height"             
                layout="@layout/ali_de_bd_consume_btn" />

            <include
                android:id="@+id/ali_de_bd_baodian_consume_3"
                android:layout_width="@dimen/ali_de_bd_text_btn_width"
                android:layout_height="@dimen/ali_de_bd_text_btn_height"
                layout="@layout/ali_de_bd_consume_btn" />

            <include
                android:id="@+id/ali_de_bd_baodian_consume_4"
                android:layout_width="@dimen/ali_de_bd_text_btn_width"
                android:layout_height="@dimen/ali_de_bd_text_btn_height"
                layout="@layout/ali_de_bd_consume_btn" />

            <include
                android:id="@+id/ali_de_bd_baodian_consume_5"
                android:layout_width="@dimen/ali_de_bd_text_btn_width"
                android:layout_height="@dimen/ali_de_bd_text_btn_height"
                layout="@layout/ali_de_bd_consume_btn" />
        </LinearLayout>

        <TextView
            android:id="@+id/ali_de_bd_consume_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="@dimen/ali_de_bd_text_size_20"
            android:gravity="center_horizontal"
            android:text="@string/ali_de_bd_string_consume_is_user_credit_tips"
            android:textColor="@color/ali_de_bd_pay_btn_txt_color_normal"
            android:textSize="@dimen/ali_de_bd_text_size_20" />

        <!--
        <Button
            android:id="@+id/ali_de_bd_consume_close"
            android:layout_width="@dimen/ali_de_bd_text_btn_width"
            android:layout_height="@dimen/ali_de_bd_text_btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/ali_de_bd_string_consume_close"
            android:textColor="@drawable/ali_de_bd_close_play_btn_text_color_selector"
            android:textSize="@dimen/ali_de_bd_text_size_26" />
        -->
    </LinearLayout>

</com.de.aligame.core.ui.view.BdPayCommonView>