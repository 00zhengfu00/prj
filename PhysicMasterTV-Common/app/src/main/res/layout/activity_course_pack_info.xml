<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".activity.CoursePackBoughtActivity">

    <com.lswuyou.tv.pm.view.TitleBarView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y40"
        android:background="@color/transparent"
        android:focusable="false">
    </com.lswuyou.tv.pm.view.TitleBarView>

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/x150"
        android:layout_marginTop="@dimen/y50"
        android:text="专题名称"
        android:textColor="#289eaf"
        android:textSize="@dimen/common_text_size"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_below="@id/tv_course_name"
        android:layout_marginLeft="@dimen/x150"
        android:layout_marginRight="@dimen/x150"
        android:layout_marginTop="@dimen/x28"
        android:background="#289eaf"
        />

    <reco.frame.tv.view.TvGridView
        android:id="@+id/tgv_imagelist"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y1080"
        android:layout_below="@id/tv_course_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x150"
        android:layout_marginTop="@dimen/y324"
        android:clipChildren="false"
        android:clipToPadding="false"
        tv:animationType="DEFAULT"
        tv:boarderBottom="@dimen/x60"
        tv:boarderLeft="@dimen/x30"
        tv:boarderRight="@dimen/x60"
        tv:boarderTop="@dimen/x30"
        tv:columns="3"
        tv:cursorRes="@mipmap/cursor"
        tv:initFocus="false"
        tv:itemH="@dimen/y120"
        tv:itemW="@dimen/x484"
        tv:spaceHori="@dimen/x84"
        tv:spaceVert="@dimen/y64"
        >
    </reco.frame.tv.view.TvGridView>
</RelativeLayout>
