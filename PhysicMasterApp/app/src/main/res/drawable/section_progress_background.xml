<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:angle="0"
                android:endColor="#338aae"
                android:startColor="#338aae"/>
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient
                    android:angle="45"
                    android:endColor="#C8EDF0"
                    android:startColor="#C8EDF0"/>
            </shape>
        </clip>
    </item>
</layer-list>