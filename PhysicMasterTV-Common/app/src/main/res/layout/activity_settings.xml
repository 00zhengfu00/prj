<?xml version="1.0" encoding="utf-8"?>
<reco.frame.tv.view.TvRelativeLayoutAsGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false"
    tools:context="com.lswuyou.tv.pm.activity.SettingsActivity"
    tv:boarderBottom="@dimen/boader_width"
    tv:boarderLeft="@dimen/boader_width"
    tv:boarderRight="@dimen/boader_width"
    tv:boarderTop="@dimen/boader_width"
    tv:cursorRes="@drawable/cursor"
    tv:scalable="false">

    <com.lswuyou.tv.pm.view.TitleBarView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y40"
        android:background="@color/transparent"
        android:focusable="false">
    </com.lswuyou.tv.pm.view.TitleBarView>

    <RelativeLayout
        android:id="@+id/ratio_lay"
        android:layout_width="@dimen/x1558"
        android:layout_height="@dimen/y142"
        android:layout_alignParentTop="true"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y150"
        android:background="@color/item_bg_color1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center"
            android:text="默认分辨率"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            />

        <TextView
            android:id="@+id/tv_quality"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x60"
            android:drawableLeft="@mipmap/left"
            android:drawablePadding="@dimen/x80"
            android:drawableRight="@mipmap/right"
            android:gravity="center"
            android:text="高清"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/screen_ratio_lay"
        android:layout_width="@dimen/x1558"
        android:layout_height="@dimen/y142"
        android:layout_below="@id/ratio_lay"
        android:layout_centerHorizontal="true"
        android:background="@color/item_bg_color2"
        android:focusable="true"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center"
            android:text="画幅比例"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x60"
            android:drawableLeft="@mipmap/left"
            android:drawablePadding="@dimen/x80"
            android:drawableRight="@mipmap/right"
            android:gravity="center"
            android:text="全屏"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_record_lay"
        android:layout_width="@dimen/x1558"
        android:layout_height="@dimen/y142"
        android:layout_below="@id/screen_ratio_lay"
        android:layout_centerHorizontal="true"
        android:background="@color/item_bg_color2"
        android:focusable="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center"
            android:text="清除播放记录"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            />

        <ImageView
            android:layout_width="@dimen/x55"
            android:layout_height="@dimen/x64"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:scaleType="fitXY"
            android:src="@mipmap/trashcan"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/version_lay"
        android:layout_width="@dimen/x1558"
        android:layout_height="@dimen/y142"
        android:layout_below="@id/clear_record_lay"
        android:layout_centerHorizontal="true"
        android:background="@color/item_bg_color1"
        android:focusable="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center"
            android:text="检测新版本"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            />

        <ImageView
            android:layout_width="@dimen/x58"
            android:layout_height="@dimen/x59"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:scaleType="fitXY"
            android:src="@mipmap/update"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_cache_lay"
        android:layout_width="@dimen/x1558"
        android:layout_height="@dimen/y142"
        android:layout_below="@id/version_lay"
        android:layout_centerHorizontal="true"
        android:background="@color/item_bg_color2"
        android:focusable="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x60"
            android:gravity="center"
            android:text="清理缓存"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            />

        <TextView
            android:id="@+id/tv_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            android:gravity="center"
            android:text="0M"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            />
    </RelativeLayout>
</reco.frame.tv.view.TvRelativeLayoutAsGroup>
