<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#a0050c1e"
        android:paddingBottom="@dimen/y112"
        android:paddingTop="@dimen/y88">

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x40"
            android:gravity="center"
            android:text="您将执行以下操作"
            android:textColor="@color/white"
            android:textSize="@dimen/x52"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_note"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y112"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/x400"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/image"
                android:background="@drawable/selector_common_btn_bg"
                android:focusable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/x20"
                android:paddingTop="@dimen/x20"
                android:text="清除该记录"
                android:textColor="@color/text_color_bg"
                android:textSize="@dimen/x50"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btn_delete_all"
                android:layout_width="@dimen/x400"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/image"
                android:layout_marginLeft="@dimen/x88"
                android:layout_toRightOf="@id/image"
                android:background="@drawable/selector_common_btn_bg"
                android:focusable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/x20"
                android:paddingTop="@dimen/x20"
                android:text="删除全部"
                android:textColor="@color/text_color_bg"
                android:textSize="@dimen/x50"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>