<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgound"
    android:orientation="vertical">

    <include
        layout="@layout/top_title"/>

    <TextView
        android:id="@+id/tv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_14"
        android:drawablePadding="@dimen/dimen_4"
        android:drawableRight="@drawable/subject_textview_selector"
        android:gravity="center_vertical"
        android:text="初中物理"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dimen_14"
        android:visibility="gone"
        />

    <GridView
        android:id="@+id/gv_topicmaps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_6"
        android:horizontalSpacing="@dimen/dimen_4"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/dimen_6"
        android:visibility="visible">
    </GridView>

    <RelativeLayout
        android:id="@+id/rl_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_arrow"
        android:background="@color/colorBackgound"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_150"
            android:src="@mipmap/zanwushuju"/>
    </RelativeLayout>
</LinearLayout>
