<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"/>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38"
        android:background="@color/colorBackgound"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_20"
        android:text="@string/string_prop"
        android:textColor="@color/colorTitleBlue"
        android:textSize="@dimen/size_16"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_100"
        android:background="@color/colorWhite">

    <GridView
        android:id="@+id/lv_backpack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="@dimen/dimen_8"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_10"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/dimen_8">
    </GridView>

        <RelativeLayout
            android:id="@+id/rl_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgound"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/zanwushuju"
                android:layout_marginLeft="@dimen/dimen_150"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>

