<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackPack">


        <ImageView
            android:id="@+id/iv_backpack"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_4"
            android:src="@mipmap/jingli_jia30"/>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_alignBottom="@+id/iv_backpack"
            android:layout_marginLeft="@dimen/dimen_minus_10"
            android:layout_toRightOf="@+id/iv_backpack"
            android:background="@drawable/shap_circle_blue"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxLength="3"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_14"/>

        <TextView
            android:id="@+id/tv_backpack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_backpack"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="恢复30点精力值"
            android:textColor="@color/colorDarkBlue"
            android:textSize="@dimen/size_12"/>

        <Button
            android:id="@+id/btn_backpack"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_26"
            android:layout_below="@+id/iv_backpack"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_34"
            android:layout_marginBottom="@dimen/dimen_14"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_centerHorizontal="true"
            android:background="@drawable/blue_btn_background"
            android:text="使用"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>
</RelativeLayout>