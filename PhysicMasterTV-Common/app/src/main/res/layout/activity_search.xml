<?xml version="1.0" encoding="utf-8"?>
<reco.frame.tv.view.TvRelativeLayoutAsGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="com.lswuyou.tv.pm.activity.SearchActivity">

    <RelativeLayout
        android:id="@+id/lay_search"
        android:layout_width="@dimen/x724"
        android:layout_height="@dimen/y70"
        android:layout_marginTop="@dimen/y84"
        >

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y70"
            android:background="@color/selected_bg_color"/>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="@dimen/x620"
            android:layout_height="@dimen/y70"
            android:layout_toRightOf="@id/view"
            android:background="@color/half_white_20"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"/>

        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_search"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x70"
            android:layout_toRightOf="@id/tv_search"
            android:background="@drawable/search_btn_bg"
            android:focusable="true"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            tv:scalable="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_line1"
        android:layout_width="@dimen/x686"
        android:layout_height="@dimen/y70"
        android:layout_below="@id/lay_search"
        android:layout_marginLeft="@dimen/x38"
        android:layout_marginTop="@dimen/y40"
        android:clipChildren="false"
        android:clipToPadding="false">

        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/x338"
            android:layout_height="@dimen/y70"
            android:background="@drawable/search_btn_bg"
            android:focusable="true"
            android:text="退格"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            tv:durationLarge="100"
            tv:scalable="true"
            />

        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_clear"
            android:layout_width="@dimen/x338"
            android:layout_height="@dimen/y70"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/btn_delete"
            android:background="@drawable/search_btn_bg"
            android:focusable="true"
            android:text="清除"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            tv:scalable="true"
            />
    </RelativeLayout>
    <!-- 此处有五个自定义参数:
    	cursorRes指定光标图片
    	itemWidth为子项宽度
    	itemHeight为子项高度
    	columns为列数
    	animationType 动画类型 默认效果为跃迁 也可设为 TRANSLATE 平移-->
    <reco.frame.tv.view.TvGridView
        android:id="@+id/tgv_keyboard"
        android:layout_width="@dimen/x720"
        android:layout_height="@dimen/y700"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginTop="@dimen/y250"
        android:background="@color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false"
        tv:animationType="DEFAULT"
        tv:columns="6"
        tv:itemH="@dimen/y100"
        tv:itemW="@dimen/x106"
        tv:paddingLeft="@dimen/x20"
        tv:paddingTop="@dimen/x20"
        tv:spaceHori="@dimen/x10"
        tv:spaceVert="@dimen/y10">
    </reco.frame.tv.view.TvGridView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tgv_keyboard"
        android:layout_marginLeft="@dimen/x38"
        android:text="拼音首字母搜索“中考冲刺” 输入：ZKCC"
        android:textColor="@color/white"
        android:textSize="@dimen/x30"
        />

    <RelativeLayout
        android:id="@+id/lay_recommand"
        android:layout_width="@dimen/x366"
        android:layout_height="@dimen/y780"
        android:layout_marginTop="@dimen/y180"
        android:layout_toRightOf="@id/tgv_keyboard"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/x84"
        android:paddingRight="@dimen/x84">

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOT热门搜索"
            android:textColor="@color/selected_bg_color"
            android:textSize="@dimen/x30"
            />

        <reco.frame.tv.view.TvListView
            android:id="@+id/tlv_recommand"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y700"
            android:layout_marginTop="@dimen/y50"
            tv:cursorRes="@color/transparent"
            tv:focusOption="PARENT_ONLY"
            tv:itemH="@dimen/y64"
            tv:itemW="@dimen/x200"
            tv:scalable="true"
            >
        </reco.frame.tv.view.TvListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/x830"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/lay_recommand"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="@dimen/y100"
        >

        <TextView
            android:id="@+id/tv_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索结果"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            />
        <!-- 此处有五个自定义参数:
            cursorRes指定光标图片
            itemWidth为子项宽度
            itemHeight为子项高度
            columns为列数
            animationType 动画类型 默认效果为跃迁 也可设为 TRANSLATE 平移-->
        <reco.frame.tv.view.TvGridView
            android:id="@+id/tgv_search_courses"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y50"
            android:clipChildren="false"
            android:clipToPadding="false"
            tv:animationType="DEFAULT"
            tv:boarderBottom="30dp"
            tv:boarderLeft="@dimen/boader_width"
            tv:boarderRight="30dp"
            tv:boarderTop="@dimen/boader_width"
            tv:columns="2"
            tv:cursorRes="@drawable/cursor_1920"
            tv:initFocus="false"
            tv:itemH="@dimen/y189"
            tv:itemW="@dimen/x336"
            tv:paddingLeft="@dimen/x20"
            tv:paddingTop="@dimen/x20"
            tv:spaceHori="@dimen/x40"
            tv:spaceVert="@dimen/y20"
            >
        </reco.frame.tv.view.TvGridView>
    </RelativeLayout>
</reco.frame.tv.view.TvRelativeLayoutAsGroup>
