<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/dimen_20"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_total_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_22"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FCBE03"
                    android:textSize="@dimen/size_24"/>


                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:layout_alignTop="@id/tv_total_gold"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:layout_toRightOf="@id/tv_total_gold"
                    android:src="@mipmap/shouye_jinbi"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_alignLeft="@id/tv_total_gold"
                    android:layout_alignRight="@id/tv_total_gold"
                    android:layout_below="@+id/tv_total_gold"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:background="#FCBE03"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="我的金币总额"
                    android:textColor="#999999"
                    android:textSize="@dimen/size_14"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20"
                android:background="@color/colorBackgound"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_16"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/size_18"/>

            <RelativeLayout
                android:id="@+id/rl_award"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:layout_margin="@dimen/dimen_8"
                android:background="@mipmap/choujiang_dibu">


                <ImageView
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_30"
                    android:src="@mipmap/choujiang_yuan"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:text="幸运抽奖"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_16"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_20"
                android:background="@color/colorBackgound"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_16"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/size_18"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_prop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:text="道具兑换"
                    android:textColor="@color/colorTitleBlue"
                    android:textSize="@dimen/size_16"
                    />

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/dimen_140"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_below="@id/tv_prop"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@color/colorTitleBlue"/>


                <com.physicmaster.widget.MoreGridView
                    android:id="@+id/gv_prop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/view2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:layout_marginRight="@dimen/dimen_6"
                    android:layout_marginTop="@dimen/dimen_18"
                    android:gravity="center"
                    android:horizontalSpacing="@dimen/dimen_6"
                    android:listSelector="@color/colorWhite"
                    android:numColumns="2"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/dimen_6">
                </com.physicmaster.widget.MoreGridView>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/colorBackgound"/>

            <RelativeLayout
                android:id="@+id/rl_pet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="宠物兑换"
                    android:textColor="@color/colorTitleBlue"
                    android:textSize="@dimen/size_16"
                    />

                <View
                    android:id="@+id/view3"
                    android:layout_width="@dimen/dimen_140"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_below="@id/tv_pet"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@color/colorTitleBlue"/>


                <com.physicmaster.widget.MoreGridView
                    android:id="@+id/gv_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/view3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:layout_marginRight="@dimen/dimen_6"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:horizontalSpacing="@dimen/dimen_6"
                    android:listSelector="@color/colorWhite"
                    android:numColumns="2"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/dimen_6">
                </com.physicmaster.widget.MoreGridView>


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
