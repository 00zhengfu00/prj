<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_global_color"
    android:orientation="vertical" >

    <com.iask.yiyuanlegou1.widget.TitleBarView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/pink" />

    <TextView
        android:id="@+id/tv_select_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="当前选择地区"
        android:textColor="@color/text_default_color"
        android:textSize="15sp" />

    <com.iask.yiyuanlegou1.widget.ClearEditText
        android:id="@+id/et_input_school"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="请输入详细地址"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:maxLength="20"
        android:textColorHint="@color/gray"
        android:textColor="@color/text_default_color"
        android:textSize="15sp" >
    </com.iask.yiyuanlegou1.widget.ClearEditText>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_red_bg"
        android:text="确定"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="17sp" />

</LinearLayout>