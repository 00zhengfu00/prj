<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rl_review"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_80"
              android:background="@color/colorWhite"
              android:paddingRight="@dimen/dimen_10"
              android:orientation="horizontal">


    <View
        android:id="@+id/iv_bian"
        android:layout_width="@dimen/dimen_6"
        android:layout_height="match_parent"
        android:background="@color/colorTitleBlue"
        />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_14"
        android:layout_weight="1"
        android:lines="1"
        android:text="温度"
        android:textColor="@color/colorLineGray"
        android:textSize="@dimen/size_18"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_6"
            android:layout_centerVertical="true"
            android:background="@drawable/section_item_selector"
            />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_video"
            android:layout_below="@id/iv_video"
            android:layout_marginTop="@dimen/dimen_4"
            android:text=""
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/size_16"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_stars"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_4"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_excersise"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_6"
            android:layout_centerVertical="true"
            android:background="@drawable/section_item_selector"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_excersise"
            android:layout_below="@id/iv_excersise"
            >

            <LinearLayout
                android:id="@+id/ll_xing"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_xing1"
                    android:layout_width="@dimen/dimen_14"
                    android:layout_height="@dimen/dimen_14"
                    android:layout_marginLeft="@dimen/dimen_1"
                    android:src="@mipmap/huixing"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_xing2"
                    android:layout_width="@dimen/dimen_14"
                    android:layout_height="@dimen/dimen_14"
                    android:layout_marginLeft="@dimen/dimen_3"
                    android:layout_marginRight="@dimen/dimen_3"
                    android:src="@mipmap/huixing"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_xing3"
                    android:layout_width="@dimen/dimen_14"
                    android:layout_height="@dimen/dimen_14"
                    android:src="@mipmap/huixing"
                    android:visibility="visible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:text="习题"
                android:textColor="@color/colorDarkGray"
                android:textSize="@dimen/size_16"
                android:visibility="gone"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>