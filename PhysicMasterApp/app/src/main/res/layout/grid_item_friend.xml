<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:riv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_friend"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_80"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_background">

        <com.physicmaster.widget.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dimen_56"
            android:layout_height="@dimen/dimen_56"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_4"
            android:padding="@dimen/dimen_4"
            android:scaleType="fitXY"
            riv:borderRadius="@dimen/dimen_4"
            riv:type="round"/>

        <ImageView
            android:id="@+id/iv_checked"
            android:layout_width="@dimen/dimen_18"
            android:layout_height="@dimen/dimen_18"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_4"
            android:src="@mipmap/mianfeijingli_xuanzhong"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_2"
            android:layout_marginTop="@dimen/dimen_5"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="用户名"
            android:textSize="@dimen/size_12"
            />
    </RelativeLayout>
</RelativeLayout>