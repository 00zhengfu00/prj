<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_gold"
        android:layout_width="@dimen/dimen_28"
        android:layout_height="@dimen/dimen_28"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_10"
        android:src="@mipmap/shouye_jinbi"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_toRightOf="@id/iv_gold"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="完成一次习题讲解视频学习"
            android:textColor="#333333"
            android:textSize="@dimen/size_16"
            />

        <TextView
            android:id="@+id/tv_get_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_6"
            android:text="金币+10"
            android:textColor="#ffa14d"
            android:textSize="@dimen/size_13"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_36"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_8"
        android:background="@color/transparent"
        android:gravity="center"
        android:lines="1"
        android:text="1/1"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/size_14"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/btn_task"
        android:layout_width="@dimen/dimen_82"
        android:layout_height="@dimen/dimen_34"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@drawable/blue_btn_background"
        android:text="领取"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_15"
        android:visibility="visible"
        />


</RelativeLayout>