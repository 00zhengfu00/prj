<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorBackgound"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200"
                android:background="@color/colorTitleBlue">


                <Button
                    android:id="@+id/btn_daifu"
                    android:layout_width="@dimen/dimen_160"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_24"
                    android:background="@drawable/white_btn_background"
                    android:gravity="center"
                    android:text="让家人帮我代付"
                    android:textColor="@color/colorTitleBlue"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="@dimen/dimen_240"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/btn_daifu"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:gravity="center"
                    android:lines="2"
                    android:text="爸妈担心你的学习？大师帮你告诉家人如何快速提高成绩"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="@dimen/dimen_240"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:drawablePadding="@dimen/dimen_2"
                    android:drawableRight="@mipmap/vip"
                    android:gravity="center"
                    android:lines="1"
                    android:text="加入数理化学大师 (初中)"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_18"/>


                <ImageView
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_above="@id/tv_title"
                    android:layout_marginBottom="@dimen/dimen_minus_10"
                    android:layout_toLeftOf="@id/tv_title"
                    android:src="@mipmap/zuo"/>

                <ImageView
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_above="@id/btn_daifu"
                    android:layout_marginLeft="@dimen/dimen_minus_10"
                    android:layout_toRightOf="@id/tv_content"
                    android:src="@mipmap/you"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:id="@+id/rl1"
                android:layout_below="@id/rl"
                android:paddingBottom="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_10">


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_60"
                    android:text=""
                    android:textColor="@color/colorLineGray"
                    android:textSize="@dimen/size_17"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_alignLeft="@id/tv_price"
                    android:layout_alignRight="@id/tv_price"
                    android:layout_below="@id/tv_price"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:background="@color/colorrank"></View>

                <TextView
                    android:id="@+id/tv_price_yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_price"
                    android:layout_below="@id/tv_price"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:text="一个月尝鲜"
                    android:textColor="@color/colorLineGray"
                    android:textSize="@dimen/size_14"/>

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue"
                    android:layout_below="@id/tv_price_yue"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:src="@drawable/shape_circle"/>


                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue"
                    android:layout_below="@id/iv1"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"/>

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue"
                    android:layout_below="@id/iv2"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"/>

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue"
                    android:layout_below="@id/iv3"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"/>

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue"
                    android:layout_below="@id/iv4"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"/>


                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue"
                    android:layout_below="@id/iv5"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"
                    android:visibility="visible"/>


                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue"
                    android:layout_below="@id/iv6"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"
                    android:visibility="visible"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv7"
                    android:layout_alignLeft="@id/tv_price_yue"
                    android:layout_alignTop="@id/iv1"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:background="@color/colorrank"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv1"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv1"
                    android:text="干货内容持续更新"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv2"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv2"
                    android:text="核心考点必练题讲解,考的全会"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv3"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv3"
                    android:text="解锁所有讲解视频"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv4"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv4"
                    android:text="缓存视频"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv5"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv5"
                    android:text="闯关金币翻倍"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>


                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv6"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv6"
                    android:text="赠送3000积分，500金币"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv7"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv7"
                    android:text="赠送初中数理化全套必练题"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"
                    android:visibility="visible"/>


                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_alignBottom="@id/tv_price_yue"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_30"
                    android:background="@drawable/blue_btn_bg2"
                    android:text="开通"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_16"/>


                <ImageView
                    android:id="@+id/iv_tuijian"
                    android:layout_width="@dimen/dimen_90"
                    android:layout_height="@dimen/dimen_90"
                    android:src="@mipmap/tuijian"
                    android:visibility="visible"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:paddingBottom="@dimen/dimen_30"
                android:layout_below="@id/rl1"
                android:layout_marginBottom="@dimen/dimen_30">


                <TextView
                    android:id="@+id/tv_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_60"
                    android:text=""
                    android:textColor="@color/colorLineGray"
                    android:textSize="@dimen/size_17"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_alignLeft="@id/tv_price2"
                    android:layout_alignRight="@id/tv_price2"
                    android:layout_below="@id/tv_price2"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:background="@color/colorrank"></View>

                <TextView
                    android:id="@+id/tv_price_yue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_price2"
                    android:layout_below="@id/tv_price2"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:text="一个月尝鲜"
                    android:textColor="@color/colorLineGray"
                    android:textSize="@dimen/size_14"/>

                <ImageView
                    android:id="@+id/iv11"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue2"
                    android:layout_below="@id/tv_price_yue2"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:src="@drawable/shape_circle"/>


                <ImageView
                    android:id="@+id/iv22"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue2"
                    android:layout_below="@id/iv11"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"/>

                <ImageView
                    android:id="@+id/iv33"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue2"
                    android:layout_below="@id/iv22"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"/>

                <ImageView
                    android:id="@+id/iv44"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue2"
                    android:layout_below="@id/iv33"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"/>

                <ImageView
                    android:id="@+id/iv55"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue2"
                    android:layout_below="@id/iv44"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"/>


                <ImageView
                    android:id="@+id/iv66"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue2"
                    android:layout_below="@id/iv55"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"
                    android:visibility="visible"/>


                <ImageView
                    android:id="@+id/iv77"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_alignLeft="@id/tv_price_yue2"
                    android:layout_below="@id/iv66"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:src="@drawable/shape_circle"
                    android:visibility="visible"/>

                <View
                    android:id="@+id/view11"
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv77"
                    android:layout_alignLeft="@id/tv_price_yue2"
                    android:layout_alignTop="@id/iv11"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:background="@color/colorrank"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv11"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv11"
                    android:text="干货内容持续更新"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv22"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv22"
                    android:text="核心考点必练题讲解,考的全会"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv33"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv33"
                    android:text="解锁所有讲解视频"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv44"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv44"
                    android:text="缓存视频"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv55"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv55"
                    android:text="闯关金币翻倍"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"/>


                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv66"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv66"
                    android:text="赠送1500积分，300金币"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"
                    android:visibility="visible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv77"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_minus_4"
                    android:layout_toRightOf="@id/iv77"
                    android:text="赠送3册必练题"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="@dimen/size_14"
                    android:visibility="visible"/>


                <Button
                    android:id="@+id/btn_buy2"
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="@dimen/dimen_32"
                    android:layout_alignBottom="@id/tv_price_yue2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_30"
                    android:background="@drawable/blue_btn_bg2"
                    android:text="开通"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_16"/>


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>