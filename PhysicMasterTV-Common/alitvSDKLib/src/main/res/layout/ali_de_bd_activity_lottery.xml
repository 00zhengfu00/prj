<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ali_de_bd_lottery_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ali_de_bd_bg_payment_stock_nonalipay_solid"
        android:orientation="vertical" >

     
        <LinearLayout
            android:id="@+id/ali_de_bd_consume_result_award_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ali_de_bd_margin_20"
            android:layout_marginBottom="@dimen/ali_de_bd_margin_32"
            android:gravity="center"
            android:orientation="vertical" >

           

            <LinearLayout
                android:id="@+id/ali_de_bd_consume_result_award_ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ali_de_bd_margin_32"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ali_de_bd_result_gift_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ali_de_bd_result_gift"
                    />

                <TextView
                    android:id="@+id/ali_de_bd_consume_result_award_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                    android:textColor="@color/ali_de_bd_pay_title_text_color"
                    android:textSize="@dimen/ali_de_bd_text_size_32" />
            </LinearLayout>

            <TextView
                android:id="@+id/ali_de_bd_consume_result_award_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="@dimen/ali_de_bd_margin_10"
                android:gravity="center_horizontal"
                android:textColor="@color/ali_de_bd_pay_btn_txt_color_normal"
                android:textSize="@dimen/ali_de_bd_text_size_20"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ali_de_bd_consume_result_user_address_ll"
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:gravity="center"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#1e000000" />

            <RelativeLayout
                android:id="@+id/ali_de_bd_consume_result_user_address"
                android:layout_width="wrap_content"
                android:layout_height="156dp" >

                <LinearLayout
                    android:id="@+id/ali_de_bd_consume_result_user_address_text_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/ali_de_bd_consume_result_user_address_text_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ali_de_bd_margin_16"
                        android:textColor="@color/ali_de_bd_text_address_color"
                        android:textSize="@dimen/ali_de_bd_text_size_24" />

                    <TextView
                        android:id="@+id/ali_de_bd_consume_result_user_address_text_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ali_de_bd_margin_4"
                        android:textColor="@color/ali_de_bd_text_address_color"
                        android:textSize="@dimen/ali_de_bd_text_size_20" />

                    <TextView
                        android:id="@+id/ali_de_bd_consume_result_user_address_text_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ali_de_bd_margin_16"
                        android:textColor="@color/ali_de_bd_text_address_city_color"
                        android:textSize="@dimen/ali_de_bd_text_size_16" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ali_de_bd_consume_result_user_address_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ali_de_bd_btn_reward_switch"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ali_de_bd_consume_result_user_address_blur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ali_de_bd_btn_reward_blur" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/whole_dialog_button_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <include
                android:id="@+id/ali_de_bd_baodian_consume_1"    
                android:layout_width="@dimen/ali_de_bd_text_btn_width"
                android:layout_height="@dimen/ali_de_bd_text_btn_height"         
                layout="@layout/ali_de_bd_consume_btn" />

        </LinearLayout>

   
    </LinearLayout>

 

</RelativeLayout>