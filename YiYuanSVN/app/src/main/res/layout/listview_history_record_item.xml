<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_item_style_border_light_divider"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32.0dip"
        android:background="@drawable/shape_item_style_no_bottomborder"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/par_and_time"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="16.0dip"
            android:text="第0期 揭晓时间：0000-00-00 00:00:00:000"
            android:textColor="@color/text_default_color"
            android:textSize="12.5dip"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingRight="20.0dip"
            android:src="@mipmap/more"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:background="@drawable/shape_item_style_border_light_divider"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/join_record_icon"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/default_icon"
            app:riv_corner_radius="50dip"
            app:riv_mutate_background="true"
            app:riv_oval="true"
            app:riv_tile_mode="repeat"/>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="6.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <!--<LinearLayout-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="6.0dip"-->
            <!--android:text="获奖者："-->
            <!--android:textColor="@color/text_default_color"-->
            <!--android:textSize="10.799988dip"/>-->

            <!--<TextView-->
            <!--android:id="@+id/nickName"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ellipsize="end"-->
            <!--android:singleLine="true"-->
            <!--android:text="000"-->
            <!--android:textColor="#ff0d82db"-->
            <!--android:textSize="10.799988dip"/>-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_nper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.0dip"
                    android:text=""
                    android:textColor="@color/text_default_color"
                    android:textSize="10.799988dip"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/text_default_color"
                    android:textSize="10.799988dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.0dip"
                    android:text="幸运号码："
                    android:textColor="@color/text_default_color"
                    android:textSize="10.799988dip"/>

                <TextView
                    android:id="@+id/lcode_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00000000"
                    android:textColor="@color/red"
                    android:textSize="10.799988dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.0dip"
                    android:text="本次参与："
                    android:textColor="@color/text_default_color"
                    android:textSize="10.799988dip"/>

                <TextView
                    android:id="@+id/par_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="10.799988dip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人次"
                    android:textColor="@color/text_default_color"
                    android:textSize="10.799988dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.0dip"
                    android:text="揭晓时间："
                    android:textColor="@color/text_default_color"
                    android:textSize="10.799988dip"/>

                <TextView
                    android:id="@+id/announce_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000-00-00 00:00:00:000"
                    android:textColor="@color/text_default_color"
                    android:textSize="10.799988dip"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:background="@color/bg_global_color"/>

</LinearLayout>