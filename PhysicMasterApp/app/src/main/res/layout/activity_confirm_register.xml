<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_40">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:digits="@string/edittext_standard"
                android:drawableLeft="@mipmap/register_pwd"
                android:drawablePadding="@dimen/dimen_24"
                android:hint="设置账号密码"
                android:includeFontPadding="false"
                android:inputType="textPassword"
                android:maxLength="20"
                android:lines="1"
                android:paddingLeft="@dimen/dimen_14"/>


            <ImageView
                android:id="@+id/iv_account_eye"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@mipmap/register_close"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_6"
            android:background="@color/colorDarkGray"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10">

            <EditText
                android:id="@+id/et_again_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:digits="@string/edittext_standard"
                android:drawableLeft="@mipmap/register_pwd"
                android:drawablePadding="@dimen/dimen_24"
                android:hint="再次确认密码"
                android:includeFontPadding="false"
                android:lines="1"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="@dimen/dimen_14"/>


            <ImageView
                android:id="@+id/iv_pwd_eye"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_18"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@mipmap/register_close"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_6"
            android:background="@color/colorDarkGray"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_40"
            android:background="@drawable/blue_btn_background"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_22"/>
    </LinearLayout>

</LinearLayout>

