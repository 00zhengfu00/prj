<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_10"
        android:text="请选择支付方式"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/size_18"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/colorLineGray"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_zhifubao_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_45"
            android:layout_marginTop="@dimen/dimen_20"
            android:drawablePadding="@dimen/dimen_10"
            android:drawableTop="@mipmap/zhifubao"
            android:text="支付宝支付"
            android:textColor="@color/colorLineGray"
            android:textSize="@dimen/size_14"/>

        <TextView
            android:id="@+id/tv_weixin_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_45"
            android:layout_marginTop="@dimen/dimen_20"
            android:drawablePadding="@dimen/dimen_10"
            android:drawableTop="@mipmap/weixinzhifu"
            android:text="微信支付"
            android:textColor="@color/colorLineGray"
            android:textSize="@dimen/size_14"/>


        <TextView
            android:id="@+id/tv_wenxin_daifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_45"
            android:layout_marginTop="@dimen/dimen_20"
            android:drawablePadding="@dimen/dimen_10"
            android:drawableTop="@mipmap/jiazhangdaifu"
            android:text="家长代付"
            android:textColor="@color/colorLineGray"
            android:textSize="@dimen/size_14"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_40"
        android:background="@drawable/pay_cancel_background"
        android:text="取消"
        android:layout_marginBottom="@dimen/dimen_20"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/size_18"/>


</LinearLayout>