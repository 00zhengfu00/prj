<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_comment_background">

        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_8"
            android:ellipsize="end"
            android:lines="1"
            android:text="标题"
            android:textColor="@color/colorLineGray"
            android:textSize="@dimen/size_16"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="时间"
            android:textColor="@color/colorBindGray"
            android:textSize="@dimen/size_14"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_question_title"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_8"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="内容"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/dimen_15"/>


        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200"
            android:layout_below="@id/tv_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_8"
            android:scaleType="centerCrop"
            android:visibility="visible"/>


        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_content"
            android:layout_marginBottom="@dimen/dimen_8"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="科目"
            android:textColor="@color/colorTitleBlue"
            android:textSize="@dimen/size_14"/>

        <TextView
            android:id="@+id/tv_answer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_content"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginBottom="@dimen/dimen_8"
            android:text="回答数目"
            android:textColor="@color/colorBindGray"
            android:textSize="@dimen/size_14"/>

    </RelativeLayout>

</RelativeLayout>