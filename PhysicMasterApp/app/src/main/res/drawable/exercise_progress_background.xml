<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:angle="0"
                android:endColor="#CAEDF0"
                android:startColor="#CAEDF0"/>
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient
                    android:angle="45"
                    android:endColor="@color/colorTitleBlue"
                    android:startColor="@color/colorTitleBlue"/>
            </shape>
        </clip>
    </item>
</layer-list>