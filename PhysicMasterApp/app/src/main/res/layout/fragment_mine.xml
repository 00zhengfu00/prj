<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:riv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_15"
        android:background="@color/colorBackgound"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTitleBlue">

            <com.physicmaster.widget.MyWaveView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_160"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:id="@+id/rl_user"
                android:layout_width="@dimen/dimen_74"
                android:layout_height="@dimen/dimen_74"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/mine_margin_top"
                android:background="@mipmap/touxiangbeijing">

                <com.physicmaster.widget.RoundImageView
                    android:id="@+id/iv_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimen_6"
                    android:src="@mipmap/wulidashi"
                    riv:type="circle"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_user"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_4"
                android:gravity="center"
                android:text="用户名"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_16"/>


            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55"
                android:layout_below="@+id/tv_user"
                android:layout_marginLeft="@dimen/dimen_26"
                android:layout_marginRight="@dimen/dimen_26"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/transparent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_study_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_study_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimen_3"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="0小时0分"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/size_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="学习时间"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/size_12"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_finish_section"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_finish_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimen_3"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="0章"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/size_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="完成章节"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/size_12"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimen_3"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="0天"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/size_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="连续学习"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/size_12"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBackgound"
                ></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_time"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_6"
                android:background="@drawable/white_background3"
                android:orientation="horizontal"
                android:outlineProvider="bounds">

                <LinearLayout
                    android:id="@+id/ll_course"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_member"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimen_12"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="我的会员"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/size_15"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_topicmaps"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_wrong"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimen_12"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="我的错题"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/size_15"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_collection"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_collect"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_12"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimen_12"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="我的收藏"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/size_15"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_question"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/mine_item_selector">

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_question"
                android:text="我的问答"
                android:textColor="@drawable/mine_text_selector"
                android:textSize="@dimen/size_14"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_22"
                android:src="@mipmap/xuan"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider_height"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:background="@color/divider"
                ></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_medal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/mine_item_selector">

            <ImageView
                android:id="@+id/iv_medal"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_medal"
                android:text="我的勋章"
                android:textColor="@drawable/mine_text_selector"
                android:textSize="@dimen/size_14"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_22"
                android:src="@mipmap/xuan"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider_height"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:background="@color/divider"
                ></View>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/mine_item_selector">

            <ImageView
                android:id="@+id/iv_cache"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_cache"
                android:text="缓存中心"
                android:textColor="@drawable/mine_text_selector"
                android:textSize="@dimen/size_14"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_22"
                android:src="@mipmap/xuan"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider_height"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:background="@color/divider"
                ></View>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_gold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/mine_item_selector">

            <ImageView
                android:id="@+id/iv_gold"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_gold"
                android:text="我的金币"
                android:textColor="@drawable/mine_text_selector"
                android:textSize="@dimen/size_14"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_22"
                android:src="@mipmap/xuan"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_friends"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@drawable/mine_item_selector">

            <ImageView
                android:id="@+id/iv_friends"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_friends"
                android:text="我的好友"
                android:textColor="@drawable/mine_text_selector"
                android:textSize="@dimen/size_14"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_22"
                android:src="@mipmap/xuan"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider_height"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:background="@color/divider"
                ></View>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_invitation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/mine_item_selector">

            <ImageView
                android:id="@+id/iv_invitation"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_invitation"
                android:text="邀请好友"
                android:textColor="@drawable/mine_text_selector"
                android:textSize="@dimen/size_14"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_22"
                android:src="@mipmap/xuan"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider_height"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:background="@color/divider"
                ></View>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/mine_item_selector">

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_settings"
                android:text="个人设置"
                android:textColor="@drawable/mine_text_selector"
                android:textSize="@dimen/size_14"/>

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_22"
                android:src="@mipmap/xuan"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider_height"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:background="@color/divider"
                ></View>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_helper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/mine_item_selector">

            <ImageView
                android:id="@+id/iv_helper"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_helper"
                android:text="帮助反馈"
                android:textColor="@drawable/mine_text_selector"
                android:textSize="@dimen/size_14"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_22">

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@mipmap/xuan"/>

                <View
                    android:id="@+id/view_feedback_red"
                    android:layout_width="@dimen/dimen_8"
                    android:layout_height="@dimen/dimen_8"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:background="@drawable/shape_circle_red"
                    android:visibility="gone"
                    />
            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
