<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dimen_166"
              android:layout_height="@dimen/dimen_160"
              android:background="@drawable/collection_item_background"
              android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_110"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginRight="@dimen/dimen_4"
            android:background="@drawable/collection_item_background"
            android:paddingLeft="0.1dp"
            android:paddingTop="0.1dp"
            android:paddingBottom="0.1dp"
            android:paddingRight="0.1dp"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/dimen_8"
            android:src="@mipmap/wulidashi"/>

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_10"
            android:ellipsize="end"
            android:lines="1"
            android:text="物态变化"
            android:textColor="#333333"
            android:textSize="@dimen/size_15"
            />


    </LinearLayout>

