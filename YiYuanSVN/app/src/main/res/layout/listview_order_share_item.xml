<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_common_click_whitebg_light_effect"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/light_gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55.0dip"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal"
            android:paddingLeft="17.0dip"
            android:paddingRight="18.0dip">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/pic_url"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:scaleType="fitXY"
                android:src="@mipmap/default_icon"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                app:riv_tile_mode="repeat"
                />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip">

                    <TextView
                        android:id="@+id/nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textColor="#ff0d82db"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/past_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="3.0dip"
                        android:text="00"
                        android:textColor="@color/gray"
                        android:textSize="9.5dip"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/share_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.0dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="iphone 6s plus plus "
                    android:textColor="@color/light_black"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:orientation="vertical"
            android:paddingLeft="3.0dip">

            <TextView
                android:id="@+id/share_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.5"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text_default_color"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:layout_marginTop="6.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/pic_parent"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/iv_share_1"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:scaleType="center"/>

                    <ImageView
                        android:id="@+id/iv_share_2"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:scaleType="center"/>

                    <ImageView
                        android:id="@+id/iv_share_3"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:scaleType="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>