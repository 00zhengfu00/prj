<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y634"
              android:background="#c8050c1e"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/y176"
        android:paddingTop="@dimen/y176">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mascot"
            />

        <Button
            android:id="@+id/btn_charge"
            android:layout_width="@dimen/x400"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/image"
            android:background="@drawable/selector_common_btn_bg"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/x20"
            android:paddingTop="@dimen/x20"
            android:text="去充值"
            android:textColor="@color/text_color_bg"
            android:textSize="@dimen/x50"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_charge"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginLeft="@dimen/x40"
            android:layout_toRightOf="@id/image"
            android:gravity="center"
            android:text="您还不是会员"
            android:textColor="@color/white"
            android:textSize="@dimen/x52"
            android:textStyle="bold"
            />
    </RelativeLayout>

</LinearLayout>