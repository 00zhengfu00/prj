<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/s_113"
              android:paddingTop="@dimen/s_163">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/letv_paysdk_product_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/f_28"/>

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s_7"
                android:text="@string/product_price_coin"
                android:textColor="@android:color/white"
                android:textSize="@dimen/f_28"/>


            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s_32"
                android:text="@string/current_account"
                android:textColor="@android:color/white"
                android:textSize="@dimen/f_28"/>

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s_7"
                android:text="@string/letv_paysdk_balance"
                android:textColor="@android:color/white"
                android:textSize="@dimen/f_28"/>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/s_1"
            android:layout_height="@dimen/s_233"
            android:layout_marginLeft="@dimen/s_73"
            android:layout_marginRight="@dimen/s_81"
            android:background="@drawable/img_coin_divider"/>

        <ImageView
            android:id="@+id/iv_operation"
            android:layout_width="@dimen/s_223"
            android:layout_height="@dimen/s_209"
            android:scaleType="fitXY"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s_79"
        android:layout_marginTop="@dimen/s_121"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="@dimen/s_180"
            android:layout_height="@dimen/s_53"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:nextFocusUp="@+id/btn_pay"
            android:text="@string/letv_paysdk_pay"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f_25"/>

        <Button
            android:id="@+id/btn_recharge"
            android:layout_width="@dimen/s_180"
            android:layout_height="@dimen/s_53"
            android:layout_marginLeft="@dimen/s_212"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:nextFocusRight="@+id/btn_recharge"
            android:nextFocusUp="@+id/btn_recharge"
            android:text="@string/letv_paysdk_lecoin_recharge"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f_25"/>
    </LinearLayout>


</LinearLayout>