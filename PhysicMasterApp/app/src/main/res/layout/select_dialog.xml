<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/dimen_10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="选择标签"
        android:textColor="@color/colorBindGray"
        android:textSize="@dimen/size_14"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="年级"
        android:textColor="@color/colorBindGray"
        android:textSize="@dimen/size_14"/>


    <com.physicmaster.widget.MoreGridView
        android:id="@+id/gv_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_10"
        android:horizontalSpacing="@dimen/dimen_10"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/dimen_20">
    </com.physicmaster.widget.MoreGridView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="学科"
        android:textColor="@color/colorBindGray"
        android:textSize="@dimen/size_14"/>

    <com.physicmaster.widget.MoreGridView
        android:id="@+id/gv_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_10"
        android:horizontalSpacing="@dimen/dimen_10"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dimen_20">
    </com.physicmaster.widget.MoreGridView>


    <Button
        android:id="@+id/btn_yes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:background="@drawable/blue_grad_bg"
        android:text="确定"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_16"
        android:visibility="gone"/>


    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_38"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/gray_background"
        android:text="取消"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_16"
        android:visibility="gone"/>

</LinearLayout>