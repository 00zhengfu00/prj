<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">


        <ImageView
            android:id="@+id/iv_cartoon"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_80"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_20"
            android:src="@mipmap/geren_katongrenwu"
            />

        <TextView
            android:id="@+id/tv_invite_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_cartoon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="34534a"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/size_18"/>

        <Button
            android:id="@+id/btn_copy_invite"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_28"
            android:layout_below="@+id/tv_invite_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="@drawable/blue_btn_background"
            android:text="复制邀请码"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_14"/>


        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_copy_invite"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_20"
            android:lineSpacingExtra="@dimen/dimen_4"
            android:text="复制邀请码分享给朋友，在您的邀请码被使用\n      之后，您和您的朋友将各自获得20金币。"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/size_16"/>

        <Button
            android:id="@+id/btn_friend_invite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_18"
            android:layout_marginLeft="@dimen/dimen_80"
            android:background="@drawable/blue_btn_background"
            android:text="使用好友的邀请码"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_18"/>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2"
            android:layout_above="@id/btn_friend_invite"
            android:layout_marginBottom="@dimen/dimen_10"
            android:background="@color/colorGray"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_marginBottom="@dimen/dimen_30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="0dp"
                android:scaleType="centerInside"
                android:layout_height="@dimen/dimen_45"
                android:layout_weight="1"
                android:src="@mipmap/invite_qq"/>

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_45"
                android:scaleType="centerInside"
                android:layout_weight="1"
                android:src="@mipmap/invite_weixin"/>

            <ImageView
                android:id="@+id/iv_kongjian"
                android:layout_width="0dp"
                android:scaleType="centerInside"
                android:layout_height="@dimen/dimen_45"
                android:layout_weight="1"
                android:src="@mipmap/invite_kongjian"/>

            <ImageView
                android:id="@+id/iv_weibo"
                android:layout_width="0dp"
                android:scaleType="centerInside"
                android:layout_height="@dimen/dimen_45"
                android:layout_weight="1"
                android:src="@mipmap/invite_weibo"/>


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
