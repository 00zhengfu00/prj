<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<com.physicmaster.widget.PagerTab-->
                <!--android:id="@+id/pt_information"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dimen_46"-->
                <!--android:background="@drawable/infromation_white_background"-->
                <!--app:dividerWidth="0dp"-->
                <!--app:tabTextSize="@dimen/size_16"></com.physicmaster.widget.PagerTab>-->

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/magic_indicator"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_50"
                android:background="@drawable/infromation_white_background"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2"
                android:background="@color/colorBackgound"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_information"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></android.support.v4.view.ViewPager>


            <RelativeLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/dimen_60"
                android:background="@color/white">

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_divider_height"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorGray"/>

                <TextView
                    android:id="@+id/tv_grade_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_10"
                    android:text="人教版 九年级全"
                    android:textColor="@color/colorTitleBlue"
                    android:textSize="@dimen/size_15"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/dimen_20"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_20"
                    android:text="切换课本"
                    android:textColor="@color/colorTitleBlue"
                    android:textSize="@dimen/size_15"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>