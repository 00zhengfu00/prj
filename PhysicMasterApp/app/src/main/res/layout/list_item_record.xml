<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:background="@color/colorWhite">





    <TextView
        android:id="@+id/tv_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_18"
        android:layout_marginTop="@dimen/dimen_14"
        android:text="领养了一只宠物"
        android:textColor="#333333"
        android:textSize="@dimen/size_16"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_record"
        android:layout_marginLeft="@dimen/dimen_18"
        android:layout_marginTop="@dimen/dimen_4"
        android:text="2016 / 09 / 02"
        android:textColor="#999999"
        android:textSize="@dimen/size_16"/>

    <TextView
        android:id="@+id/tv_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_4"
        android:text="金币+ 3"
        android:textColor="#ffa14d"
        android:textSize="@dimen/size_16"/>


    <ImageView
        android:id="@+id/iv_gold"
        android:layout_width="@dimen/dimen_26"
        android:layout_height="@dimen/dimen_26"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_above="@id/tv_gold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_18"
        android:src="@mipmap/shouye_jinbi"/>

</RelativeLayout>
</RelativeLayout>